<Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tb_newsContent"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="#00A2ED"
    android:navigationIcon="@mipmap/back_white_24"
    app:layout_collapseMode="pin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end|center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_newsContentShareBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="30dp"
            android:src="@mipmap/share_white_48" />

        <ImageView
            android:id="@+id/iv_newsContentCollectBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="20dp"
            android:src="@mipmap/star_white" />

        <LinearLayout
            android:id="@+id/ll_commentsBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="5dp"
                android:src="@mipmap/comment_white_48" />

            <TextView
                android:id="@+id/tv_commentsNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:textColor="#FFFFFF"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_thumbBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="5dp"
                android:src="@mipmap/thumb_up_white_48" />

            <TextView
                android:id="@+id/tv_popularityNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:textColor="#FFFFFF"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>

</Toolbar>